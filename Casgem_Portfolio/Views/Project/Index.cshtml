@model List<Casgem_Portfolio.Models.Entities.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
    int count = 0;
}

<h2>Projelerim</h2>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Proje İçeriği</th>
        <th>Proje İkonu</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ProjectName</td>
            <td>@item.ProjectContents</td>
            <td>@item.ProjectIcon</td>
            <td> <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-outline-danger">Sil</a></td>
            <td> <a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Project/AddProject/" class="btn btn-primary">Yeni Proje Ekle</a>

