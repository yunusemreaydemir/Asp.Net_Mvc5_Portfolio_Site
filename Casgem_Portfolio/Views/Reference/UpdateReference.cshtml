@model Casgem_Portfolio.Models.Entities.TblReference

@{
    ViewBag.Title = "UpdateReference";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.ReferenceID)
    <label>Adı Soyadı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Mail Adresi</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>İletişim Numarası</label>
    @Html.TextBoxFor(x => x.ContactNumber, new { @class = "form-control" })
    <br />
    <label>Meslek</label>
    @Html.TextBoxFor(x => x.Job, new { @class = "form-control" })
    <br />
    <label>Rsim URL</label>
    @Html.TextBoxFor(x => x.ReferenceImage, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
